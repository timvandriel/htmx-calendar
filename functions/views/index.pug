extends layout

block content
  .flex.justify-between.items-center.mb-6
    a(href="/events/new" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded")
      i(class="fas fa-plus mr-2")
      | Add Event
      
    a(href="/calendar" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded")
      i(class="fas fa-calendar mr-2")
      | View Calendar
  
  h2(class="text-2xl font-bold mb-4 text-center") Upcoming Events
  
  // Loading indicator for HTMX
  div(class="htmx-indicator text-center py-4")
    div(class="inline-block animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-blue-500")
  
  // Events container - will be loaded/refreshed with HTMX
  div(id="events-container" hx-get="/events/upcoming" hx-trigger="load" hx-indicator=".htmx-indicator")
    // Content will be loaded via HTMX
    
block scripts
  script.
    // You can add client-side JS here if needed
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Calendar app loaded');
    });